<!DOCTYPE html>
<html>

<%= render 'layouts/head' %>

<body>

<div class="container application <%= controller.controller_name %>">

  <% if flash[:notice] %>
    <div class="flash "><%= flash[:notice] %></div>
  <% end %>

  <div class="hidden-xs">
    <h4 class="logo">
      <%= link_to 'Kazoo - Friends & Family', root_path %>
    </h4>
  </div>

  <div class="row row-offcanvas row-offcanvas-right">

    <div id="left" class="col-xs-12 col-sm-9">
      <div id="main">
        <%= yield %>
      </div>
    </div>

  </div>

  <div id="footer">
    <%= render 'layouts/footer' %>
  </div>
</div>

</body>
</html>
